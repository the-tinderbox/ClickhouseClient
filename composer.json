{
  "name": "the-tinderbox/clickhouse-php-client",
  "description": "Clickhouse client over HTTP",
  "authors": [
    {
      "name": "FacedSID",
      "email": "ay@imagespark.ru"
    }
  ],
  "autoload": {
    "psr-4": {
      "Tinderbox\\Clickhouse\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tinderbox\\Clickhouse\\": "tests"
    }
  },
  "require": {
    "php": "~7.1",
    "guzzlehttp/guzzle": "~6.0",
    "satooshi/php-coveralls": "^2.2"
  },
  "bin": [
    "bin/ccat_linux",
    "bin/ccat_darwin"
  ],
  "require-dev": {
    "mockery/mockery": "^0.9.9",
    "phpunit/php-code-coverage": "^6.0",
    "phpunit/phpunit": "~7.0"
  },
  "scripts": {
    "test": "phpunit --coverage-text --colors=never"
  },
  "config": {
    "sort-packages": true
  }
}
